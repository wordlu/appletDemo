.content-row-span .big-title {
  margin-bottom: 38rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.big-title .title {
  display: flex;
  flex-direction: row;
  align-items: center;

  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #0D0D0D;
}
.big-title .btn {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #A6A6A6;
  text-align: right;

  display: flex;
  flex-direction: row;
  align-items: center;
}
 .content-row-span .big-title .btn image {
   width: 44rpx;
   height: 44rpx;
   /* margin-left: 40rpx; */
 }
.loc-banner .content-page {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: space-between;

	padding: 0 40rpx;
}

.loc-banner .content-item {
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: space-between;
}

.loc-banner .content-row {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: flex-start;
  padding-left: 32rpx;
}

.loc-banner .content-row-span {
	display: flex;
	flex-direction: row;
	flex-wrap: nowrap;
	justify-content: space-between;
}
.bg-image {
  margin-bottom: 32rpx;
  padding: 36rpx 32rpx;
  height: 72rpx;
  background-color: aqua;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 8rpx;

  background-size: cover;
  background-position: center right;
}
.bg-image .subtitle {
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #0D0D0D;
  max-width: 460rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.bg-image .address {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #A6A6A6;
  max-width: 460rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.show-image {
  margin-bottom: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.show-image .img-list {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.show-image .img-1 {
  margin-right: 16rpx;
  width: 418rpx;
  height: 276rpx;
  border-radius: 8rpx;
  background-color: #ddd;
}
.show-image .img-2 {
  width: 236rpx;
  height: 124rpx;
  border-radius: 8rpx;
  background-color: #ddd;
}
