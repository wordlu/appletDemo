/* component/classes/cla-banner/cla-banner.wxss */
.content-page {
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 60rpx;
  display: flex;
  flex-direction: column;
}
.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  margin-bottom: 32rpx;
}
.title text {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #0D0D0D;
}
.title image {
  width: 44rpx;
  height: 44rpx;
}
.content {
  display: flex;
  flex-direction: column;
}
.content .list {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-bottom: 48rpx;
  width: 100%ï¼›
}
.content .list .cover {
  width: 260rpx;
  height: 160rpx;
  background: #ddd;
  border-radius: 8rpx;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.list .class-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 32rpx;
  width: 55%;
}
.class-info .info {
  display: flex;
  flex-direction: column;
}
.class-info .info .sort {
  font-family: SFProText-Medium;
  font-size: 22rpx;
  color: #a6a6a6;
  font-weight: 700;
}
.class-info .info .name {
  font-family: SFProText-Medium;
  font-size: 32rpx;
  color: #404040;
  font-weight: 700;
}

.class-info .suit {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.class-info .suit .age {
  font-family: SFProText-Regular;
  font-size: 26rpx;
  color: #A6A6A6;
}
.class-info .suit .price {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  color: #FC9361;
  align-items: center;
}
.class-info .suit .price text {
  font-family: SFProText-Medium;
  font-size: 32rpx;
  color: #FC9361;
}
a.showClasses {
  margin-bottom: 40rpx;
  width: 100%;
  height: 80rpx;
  border: 2rpx solid rgba(128,174,255,0.5);
  border-radius: 8rpx;
  text-align: center;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #80AEFF;
  line-height: 80rpx;
}
