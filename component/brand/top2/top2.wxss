/* component/brand/top2/top2.wxss */
.content-page {
  height: 404rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 56rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  background-image: url("https://bm-mini.oss-cn-beijing.aliyuncs.com/demo/img_home_brand_bg.png");
  background-size: 100% 100%;
  border-bottom: 1rpx solid  #f2f2f2;
}
.info {
  display: flex;
  flex-direction: column;
}
.view-code {
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 60rpx;
}
.view-code .title {
  font-family: PingFangSC-Medium;
  font-size: 44rpx;
  color: #80AEFF;


  display: flex;
  flex-direction: row;
  align-items: center;
}
.view-code .title text{
  margin-right: 16rpx;
  font-weight: 700;
}
.view-code .title .img {
  width: 44rpx;
  height: 44rpx;
}
.view-code .code {
  width: 44rpx;
  height: 44rpx;
}
.content {
  display: flex;
  flex-direction: row;
}
.info .intro {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #404040;
  margin-bottom: 16rpx;
  }
.lists {
  display: flex;
  flex-direction: row;
}
.info .list {
  margin-left: -10rpx;
  font-family: PingFangSC-Medium;
  font-size: 26rpx;
  color: #A6A6A6;

}
.info .lists .separate {
  margin-left: 16rpx;
  margin-right: 30rpx;
  color: #f2f2f2;
  font-weight: 200;
}
.logo-area {
  margin-left: 32rpx;
  width: 128rpx;
  height: 128rpx;
}
.logo {
  width: 128rpx;
  height: 128rpx;
  box-shadow: 0 8rpx 20rpx 0 rgba(173,186,222,0.37);
  border-radius: 8rpx;  
}
.list view {
  width:170rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.top-content {
  width: 100%;
  margin-top: 120rpx;
  color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.brand-logo {
  height: 128rpx;
  width: 128rpx;
  border-radius: 50%;
}
.top-content-right {
  display: flex;
  flex-direction: column;
  margin-left: 32rpx;
}
.top-content-right-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img {
  width: 44rpx;
  height: 44rpx;
}
.brand-title {
  font-size: 40rpx;
}
.brand-slogan {
  font-size: 22rpx;
  text-overflow: ellipsis;
  opacity: 0.6;
}