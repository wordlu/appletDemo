/* pages/booking/appointment/result/result.wxss */

page {
    height: 100%;
}
.content-page {
    height: 100%;
    background-color: #80aeff;
}
.content-padding {
    padding: 40rpx;
}
.info-card {
    margin-bottom: 16rpx;
    background: #FFFFFF;
    box-shadow: 0 8rpx 20rpx 0 rgba(173,186,222,0.20);
    border-radius: 8rpx;
    width: 100%;
    height: 256rpx;
    background-size: cover;
}
.info-card .title {
    padding-top: 32rpx;
    margin-left: 32rpx;
    font-family: PingFangSC-Medium;
    font-size: 16px;
    color: #262626;
    font-weight: bold;
}
.semi-circle {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.semi-circle-right {
    width:20rpx;
    height:40rpx; 
    background-color:#80aeff;
    border-radius:20rpx 0 0 20rpx;
}
.semi-circle-left {
    width:20rpx;
    height:40rpx; 
    background-color:#80aeff;
    border-radius:0 20rpx 20rpx 0; 
}
.time-title {
    padding-left: 32rpx;
    margin-bottom: 16rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #8C8C8C;
}
.time {
    padding-left: 32rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #000000;
}
.list-card {
    padding: 32rpx 32rpx 52rpx;
    max-height: 464rpx;
    background-color: #ffffff;
    box-shadow: 0 8rpx 20rpx 0 rgba(173,186,222,0.20);
    border-radius: 8rpx;
}
.list-info {
    padding-bottom: 48rpx;
    margin-bottom: 52rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx solid #f2f2f2;
}
.title-area {
    display: flex;
    flex-direction: column;
}
.title-area .title {
    margin-bottom: 16rpx;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #262626;
    font-weight: bold;
}
.title-area .address {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #595959;
}
.add-icon {
  flex: 0 0 50rpx;
}
.list-card .add-icon image {
    width: 44rpx;
    height: 44rpx;
}
.note {
    padding-bottom: 52rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 2rpx solid #f2f2f2;
}
.note-icon {
    margin-right: 8rpx;
    width: 44rpx;
    height: 44rpx;
}
.note-icon image {
    width: 44rpx;
    height: 44rpx;
}
.note-text {
    line-height: 44rpx;
    font-family: PingFangSC-Regular;
    font-size: 13px;
    color: #8C8C8C;
}
.phone {
    padding-top: 52rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.phone-icon {
    width: 44rpx;
    height: 44rpx;
}
.phone-icon image {
    width: 44rpx;
    height: 44rpx;
}
.phone-text {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #80AEFF;
    font-weight: bold;
}
.success-info {
    background-color: #80aeff;
    width: 100%;
    flex-direction: column;
    align-items: center;
}
.success-icon {
    display:flex;
    flex-direction:row;
    justify-content:center;

}
.success-icon image {
    margin-bottom: 48rpx;
    width: 72rpx;
    height: 72rpx;
}
.success-text {
    margin-bottom: 16rpx;
    font-family: SFProText-Medium;
    font-size: 18px;
    color: #FFFFFF;
    text-align: center;
    font-weight: bold;
}
.success-note {
    margin-bottom: 80rpx;
    font-family: SFProText-Regular;
    font-size: 15px;
    color: #FFFFFF;
    text-align: center;
}