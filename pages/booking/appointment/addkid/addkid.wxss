/* pages/booking/appointment/addkid/addkid.wxss */

page {
    height: 100%;
}
.content-page {
    background-color: #f7f8fb;
}
.info-list {
    padding: 40rpx;
}
.list-area {
    background-color: #ffffff;
}
.list {
    margin: 0 32rpx;
    border-bottom: 1rpx solid #f2f2f2;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 104rpx;
}
.list .title {
    width: 112rpx;
    margin-right: 32rpx;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #262626;
    font-weight: bold;
}
.list input {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #595959;
}
.list .section picker {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #595959;
}
.list .rela-radio-group {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #595959;
    display: flex;
    flex-direction: row;
}
.rela-radio-group .radio {
    margin-right: 24rpx;
    height: 48rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.radio text {
    margin-right: 20rpx;
}
.button-area {
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.button-area button {
    margin-bottom: 52rpx;
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background: #80AEFF;
    border-radius: 8rpx;
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #FFFFFF;
}
.button-area a {
    font-family: PingFangSC-Medium;
    font-size: 28rpx;
    color: #F54A32;
}
.error-note {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.model {
    margin-top: -180rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 590rpx;
    height: 104rpx;
    opacity: 0.85;
    background: rgba(58, 83, 125, 0.85);
    border-radius: 8rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #FFFFFF;
    text-align: center;
}